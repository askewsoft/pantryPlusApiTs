{
    "entryFile": "src/server.ts",
    "noImplicitAdditionalProperties": "throw-on-extras",
    "controllerPathGlobs": ["src/v2/**/*Controller.ts"],
    "spec": {
      "outputDirectory": "./build",
      "specVersion": 3,
      "basePath": "/v2",
      "specFileBaseName": "swagger.v2",
      "version": "2.0.0",
      "securityDefinitions": {
        "bearerAuth": {
          "type": "http",
          "scheme": "bearer",
          "bearerFormat": "JWT"
        }
      }
    },
    "routes": {
      "routesDir": "./src",
      "middleware": "express",
      "basePath": "/v2",
      "routesFileName": "routes.v2.ts",
      "authenticationModule": "src/shared/authentication.ts"
    }
}