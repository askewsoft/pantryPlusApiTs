{
  "name": "pantryplus-api",
  "version": "0.1.0",
  "description": "This is the API layer for the PantryPlus mobile app",
  "main": "./src/server.js",
  "scripts": {
    "prestart": "npm install && npm run build",
    "build": "tsoa spec-and-routes && tsc",
    "start": "node -r dotenv/config ./build/server.js",
    "dev": "concurrently \"nodemon\" \"nodemon -x tsoa spec-and-routes\""
  },
  "nodemonConfig": {
    "watch": [
      "src/**",
      ".env"
    ],
    "ignore": [
      "src/routes.ts",
      "src/swagger.json"
    ],
    "exec": "npm run build && NODE_OPTIONS='--require dotenv/config' ts-node src/server.ts"
  },
  "keywords": [
    "swagger"
  ],
  "license": "Unlicense",
  "private": true,
  "engines": {
    "node": "22.6.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js}": [
      "eslint --fix"
    ],
    "*.{json}": [
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.4.0",
    "@types/swagger-ui-express": "^4.1.6",
    "concurrently": "^8.2.2",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.9",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "dotenv": "16.4.5",
    "express": "4.19.2",
    "express-async-handler": "^1.2.0",
    "mysql2": "3.11.0",
    "swagger-ui-express": "^5.0.1",
    "tsoa": "^6.4.0",
    "winston": "3.14.2"
  }
}
