{
  "name": "pantryplus-api",
  "version": "1.0.0",
  "description": "This is the API layer for the PantryPlus mobile app",
  "main": "./src/server.js",
  "scripts": {
    "prestart": "npm install && npm run build",
    "buildv1": "tsoa spec-and-routes -c tsoa.v1.json && tsc",
    "build": "npm run buildv1",
    "codegenv1": "openapi-generator generate -g typescript-axios -i build/swagger.json -o ../pantryPlusApiClient/v1",
    "codegen": "npm run codegenv1",
    "start": "node -r dotenv/config ./build/server.js",
    "dev": "nodemon"
  },
  "nodemonConfig": {
    "watch": [
      "src",
      ".env"
    ],
    "ext": "ts",
    "ignore": [
      "src/routes.v1.ts",
      "src/swagger.v1.json"
    ],
    "exec": "npm run build && ts-node -r dotenv/config src/server.ts || exit 1"
  },
  "keywords": [
    "swagger",
    "tsoa",
    "openapi",
    "typescript",
    "node",
    "express",
    "rest",
    "api",
    "server",
    "backend",
    "pantryplus"
  ],
  "license": "Unlicense",
  "private": true,
  "engines": {
    "node": "22.6.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js}": [
      "eslint --fix"
    ],
    "*.{json}": [
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.4.0",
    "@types/swagger-ui-express": "^4.1.6",
    "concurrently": "^8.2.2",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.9",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "@types/cors": "^2.8.17",
    "cors": "^2.8.5",
    "dotenv": "16.4.5",
    "express": "4.21.1",
    "express-async-handler": "^1.2.0",
    "mysql2": "3.11.0",
    "swagger-ui-express": "^5.0.1",
    "tsoa": "^6.4.0",
    "winston": "3.14.2"
  }
}
